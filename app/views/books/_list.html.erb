<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <h1>New book</h1>
<!-- form_with部分 -->
      <%= form_with model: Book.new do |f| %>
      <div>
      <h4>title</h4>
      <%= f.text_field :title %>
      </div>

      <div>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      </div>

      <div>
      <%= f.submit 'Create Book' %>
      </div>
      <% end %>
    </div>  
    <div class="col-lg-8">
      <h1>Books</h1>
    </div>
  </div>
</div>

<% books.each do |book| %>

<div>
  <p>title：<%= book.title %></p>
  <p>Opinion：<%= book.body %></p>
  <p>ユーザーネーム：<%= book.user.name %></p>
</div>

<% end %>
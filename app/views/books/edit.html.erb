<div class="container">
  <div class="row">
    <div class="mx-auto col-xl-4">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
      
      <p>Title</p>
      <%= f.text_field :title %>
      
      <p>Opinion</p>
      <%= f.text_area :body %>
      
      <%= f.submit 'Update Book' %>
      
      <% end %>
    </div>
  </div>
</div>
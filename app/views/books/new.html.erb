<!-- form_with部分 -->
<%= form_with model: Book.new do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'home', books: @books, user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td><%= link_to user_path(@user.id) do %>
              <%= image_tag @user.get_profile_image(100,100) %>
              <div>
              <%= @user.name %>
              </div>
              <% end %>
          </td>
          <td><%= link_to @book.title %></td>
          <td><%= @book.body %></td>
          <td>
             <% if @book.user == current_user %>
               <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %>
               <%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に削除しますか？" %>
             <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>




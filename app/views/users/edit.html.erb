<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="mx-auto col-xl-4">
      
      <h2>User info</h2>
      
      <%= form_with model: @user do |f| %>
      <div class="form-group">
        <label for="inputname">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name"%>
      </div>
      
      <div class="form-group">
        <label for="inputImage">Image</label>
        <%= f.file_field :profile_image, placeholder: "profile_image", accept: "image/*" %> 
      </div>
      
      <div class="form-group">
        <label for="inputIntroduction">Introduction</label>
        <%= f.text_field :introduction %> 
      </div>
      
        <%= f.submit "Update User",class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>
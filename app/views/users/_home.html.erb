<div class="container">
  <div class="row">
    <div class="col-xl-3">
      <h2>User info</h2>
      <%= image_tag user.get_profile_image(100,100) %>
      <table class="table">
        <tr>
        <tr></tr>
          <th>name</th>
          <td><%= user.name %></td>
        </tr>
        <tr>
          <th>introduction</th>
          <td><%= user.introduction %></td>
          <th></th>
        </tr>
      </table>
      <div class="row">
        <%= link_to "User", edit_user_path(user), class: "btn btn-outline-secondary btn-block" %>
        <i class="fas fa-user-cog"></i>
      </div>

      <h2 class="mt-3">New book</h2>
        <%= form_with model: Book.new do |f| %>
　　　  <div class="form-group">
　　　    <label for="book_title">Title</label>
　　　    <%= f.text_field :title, size: "20" %>
　　　　</div>
　　　  <div class="form-group">
　　　    <label for="book_opinion">Opinion</label>
　　　    <%= f.text_area :body, size: "30*10" %>
　　　　</div>
　　　　<div class="form-group">
　　　　  <%= f.submit "Create Book" %>
　　　　</div>
　　　　<% end %>
    </div>
  </div>
</div>
